<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
				   id="com.amplience.hybris.dm.backoffice.widgets.iframewidget">
	<name>iFrame Widget</name>
	<description>iFrame Widget loads externally hosted content into backoffice</description>
	<defaultTitle>iFrame Widget</defaultTitle>
	<author>Amplience</author>
	<version>1.0</version>
	<view src="iframe.zul"/>
	<keywords>
		<keyword>iframe</keyword>
	</keywords>
	<settings>
		<!-- The urlkey is the name of the property that has the src URL loaded into the iframe -->
		<setting key="urlkey" type="String"/>
	</settings>
	<controller class="com.amplience.hybris.dm.backoffice.widgets.IFrameController"/>
</widget-definition>
